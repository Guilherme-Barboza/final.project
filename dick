	cout << "|========================================================================|\n";
}

void questionMusic(char choice) {
	int a1 = 0;
	int b1 = 0;
	int c1 = 0;
	int d1 = 0;
	int e1 = 0;

	string answer;

	switch (choice) {
	case 'a':
		cout << "question" << endl;

		cin >> answer;
		
		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer")
		 a1 = 100;
		else {
			a1 = -100;
		}

		break;
	case 'b':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer")
			b1 = 200;
		else {
			b1 = -200;
		}

		break;
	case 'c':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer")
			c1 = 300;
		else {
			c1 = -300;
		}

		break;
	case 'd':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer")
			d1 = 400;
		else {
			d1 = -400;
		}

		break;
	case 'e':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer")
			e1 = 500;
		else {
			e1 = -500;
		}

		break;
	default:
		

	}

}

