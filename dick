int main()
{
	string name;
	string category;
	char choice;
	int points = 0;
	int catcher;
	
	cout << "What is your name?" << endl;
	
	cin >> name;
	
	cout << "Welcome To Jeopardy " << name << "!" << endl;
	
	cout << "The rules are simple:" << endl;
	
	cout << "1. Make sure you answer each question with a question in the format - what is ... / who is ... / when was ..." << endl;
	
	cout << "2. You win the number of points assigned to each question if you get it right, but lose the number of points assigned to each question if you get it wrong" << endl;
	
	//cout << "You have 30 seconds to answer each question?" << endl;
	
	cout << "3. Have fun!" << endl;
	
	cout << "Lets get started!!" << endl;
	
	cout << "Today we have 6 categories: MUSIC - LITERATURE - HISTORY - PEOPLE - SCIENCE - CHRISTMAS" << endl;

	for(int i = 1; i <= 30; i++) {
		board();

		cin >> category;
		
		cin >> choice;
		
		if (category == "music" || category == "Music" || category == "MUSIC") {
			questionMusic(choice);
			catcher = questionMusic(choice);
		}

		else if (category == "literature" || category == "Literature" || category == "LITERATURE") {
			questionLiterature(choice);
			catcher = questionLiterature(choice);
		}

		else if (category == "history" || category == "History" || category == "HISTORY") {
			questionHistory(choice);
			catcher = questionHistory(choice);
		}

		else if (category == "people" || category == "People" || category == "PEOPLE") {
			questionPeople(choice);
			catcher = questionPeople(choice);
		}
			
		else if (category == "science" || category == "Science" || category == "SCIENCE"){
			questionScience(choice);
			catcher = questionScience(choice);
		}
			
		else if (category == "christmas" || category == "Christmas" || category == "CHRISTMAS") {
			questionChristmas(choice);
			catcher = questionChristmas(choice);
		}
				
		points = points + catcher;
	}
		
	cout << "YOUR FINAL RESULT IS: " << points << "!!" << endl;
	
	cout << "CONGRATULATIONS" << endl;

}
