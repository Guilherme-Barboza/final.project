int questionMusic(int choice) {
	int a1 = 0;
	int b1 = 0;
	int c1 = 0;
	int d1 = 0;
	int e1 = 0;

	string answer;

	switch (choice) {
	case 100:
		cout << "Only Oscar winner sung by a cricket, it's Disney's theme" << endl;

		cin.ignore();
		getline(cin, answer);
		
		if (answer == "what is when you wish upon a star") {
			a1 = 100;
			cout << "CORRECT - YOU WIN 100 POINTS" << endl;
		}
		else {
			a1 = -100;
			cout << "INCORRECT - YOU LOSE 100 POINTS" << endl;
			cout << "The correct answer is: what is when you wish upon a star" << endl;
		}

		break;
	case 200:
		cout << "Bobby Keys played the sax solo on Brown Sugar with this group that he toured with for more than 45 years" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "who is the rolling stones") {
			b1 = 200;
			cout << "CORRECT - YOU WIN 200 POINTS" << endl;
		}
		else {
			b1 = -200;
			cout << "INCORRECT - YOU LOSE 200 POINTS" << endl;
			cout << "The correct answer is: who is the rolling stones " << endl;
		}

		break;
	case 300:
		cout << "In the '40s this Yardbird & sax genius formed a quintet with some okay players like Max Roach & Miles Davis" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "who is charlie parker") {
			c1 = 300;
			cout << "CORRECT - YOU WIN 300 POINTS" << endl;
		}
		else {
			c1 = -300;
			cout << "INCORRECT - YOU LOSE 300 POINTS" << endl;
			cout << "The correct answer is: who is charlie parker" << endl;
		}

		break;
	case 400:
		cout << "Nursery rhyme that can be played on touch-tone phone by dialing 3212, 333, 222, 333" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "what is mary had a little lamb") {
			d1 = 400;
			cout << "CORRECT - YOU WIN 400 POINTS" << endl;
		}
		else {
			d1 = -400;
			cout << "INCORRECT - YOU LOSE 400 POINTS" << endl;
			cout << "The correct answer is: what is mary had a little lamb " << endl;
		}

		break;
	case 500:
		cout << "This composer wrote the Pink Pather theme with sax man Plas Johnson in mind" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "who is mancini") {
			e1 = 500;
			cout << "CORRECT - YOU WIN 500 POINTS" << endl;
		}
		else {
			e1 = -500;
			cout << "INCORRECT - YOU LOSE 500 POINTS" << endl;
			cout << "The correct answer is: who is mancini " << endl;
		}

		break;
	default:
		cout << "INVALID CHOICE" << endl;

	}

	return a1 + b1 + c1 + d1 + e1;
}

int questionLiterature(int choice) {
	int a2 = 0;
	int b2 = 0;
	int c2 = 0;
	int d2 = 0;
	int e2 = 0;

	string answer;

	switch (choice) {
	case 100:
		cout << "If Orwell's tale were true, year Big Brother would be watching you " << endl;

