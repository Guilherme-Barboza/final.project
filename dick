		if (answer == "what is the comedy of errors") {
			d2 = 400;
			cout << "CORRECT - YOU WIN 400 POINTS" << endl;
		}
		else {
			d2 = -400;
			cout << "INCORRECT - YOU LOSE 400 POINTS" << endl;
			cout << "The correct answer is: what is the comedy of errors " << endl;
		}

		break;
	case 500:
		cout << "Its sequels were Men against the Sea & Pitcairn´s Island" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "what is mutiny on the bounty") {
			e2 = 500;
			cout << "CORRECT - YOU WIN 500 POINTS" << endl;
