	cout << "|    " << boardArray[12] << "    |    " << boardArray[13] << "     |    " << boardArray[14] << "    |    " << boardArray[15] << "    |    " << boardArray[16] << "    |    " << boardArray[17] << "    |\n";
	cout << "|-----------|------------|-----------|-----------|-----------|-----------|\n";
	cout << "|    " << boardArray[18] << "    |    " << boardArray[19] << "     |    " << boardArray[20] << "    |    " << boardArray[21] << "    |    " << boardArray[22] << "    |    " << boardArray[23] << "    |\n";
