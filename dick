int main()
{
	string name;
	string category;
	int choice;
	int points = 0;
	int catcher;
	
	cout << "What is your name?" << endl;
	
	cin >> name;
	
	cout << "Welcome To Jeopardy " << name << "!" << endl;
	
	cout << "The rules are simple:" << endl;
	
	cout << "1. Make sure you answer each question with a question in the format - what is ... / who is ... / when was ..." << endl;
	
	cout << "2. You win the number of points assigned to each question if you get it right, but lose the number of points assigned to each question if you get it wrong" << endl;
	
	cout << "3. You must answer each question in LOWERCASE!!! Or else you will lose the points for that question" << endl;
	
	cout << "4. Have fun!" << endl;
	
	cout << "Lets get started!!" << endl;
	
	cout << "Today we have 6 categories: MUSIC - LITERATURE - HISTORY - PEOPLE - SCIENCE - CHRISTMAS" << endl;

	string a = "100";
	string b = "200";
	string c = "300";
	string d = "400";
	string e = "500";
	string filler = " --- ";

	string boardArray[] = { a,a,a,a,a,a,b,b,b,b,b,b,c,c,c,c,c,c,d,d,d,d,d,d,e,e,e,e,e,e,"" };

	for (int i = 1; i <= 30; i++) {
		board(boardArray);
		cin >> category;

		// parses User input of "category" in above line into an array of chars so that you can use the toupper() function

		char tempArray[category.length() + 1];
		strcpy(tempArray, category.c_str());

		for (int i = 0; i < category.length() + 1; i++) {
			tempArray[i] = toupper(tempArray[i]);
		}

		// end Parse.

		// User input for choice
		cin >> choice;

		int changeBoard = 30;
		if (tempArray[0] == 'M') {
			cout << "Your category: Music." << endl;
			catcher = questionMusic(choice);
			if (toupper(choice) == '100') {
				changeBoard = 0;
			}
			else if (toupper(choice) == '200') {
				changeBoard = 6;
			}
			else if (toupper(choice) == '300') {
				changeBoard = 12;
			}
			else if (toupper(choice) == '400') {
				changeBoard = 18;
			}
			else if (toupper(choice) == '500') {
				changeBoard = 24;
			}

			boardArray[changeBoard] = filler;
		}
		else if (tempArray[0] == 'L') {
			cout << "Your category: Literature." << endl;
			catcher = questionLiterature(choice);
			if (toupper(choice) == 'A') {
				changeBoard = 1;
			}
			else if (toupper(choice) == 'B') {
				changeBoard = 7;
			}
			else if (toupper(choice) == 'C') {
				changeBoard = 13;
			}
			else if (toupper(choice) == 'D') {
				changeBoard = 19;
			}
			else if (toupper(choice) == 'E') {
				changeBoard = 25;
			}

			boardArray[changeBoard] = filler;
		}
		else if (tempArray[0] == 'H') {
			cout << "Your category: History." << endl;
			catcher = questionHistory(choice);
			if (toupper(choice) == 'A') {
				changeBoard = 2;
			}
			else if (toupper(choice) == 'B') {
				changeBoard = 8;
			}
			else if (toupper(choice) == 'C') {
				changeBoard = 14;
			}
			else if (toupper(choice) == 'D') {
				changeBoard = 20;
			}
			else if (toupper(choice) == 'E') {
				changeBoard = 26;
			}

			boardArray[changeBoard] = filler;
		}
		else if (tempArray[0] == 'P') {
			cout << "Your category: People." << endl;
			catcher = questionPeople(choice);
			if (toupper(choice) == 'A') {
				changeBoard = 3;
			}
			else if (toupper(choice) == 'B') {
				changeBoard = 9;
			}
			else if (toupper(choice) == 'C') {
				changeBoard = 15;
			}
			else if (toupper(choice) == 'D') {
				changeBoard = 21;
			}
			else if (toupper(choice) == 'E') {
				changeBoard = 27;
			}

			boardArray[changeBoard] = filler;
		}
		else if (tempArray[0] == 'S') {
			cout << "Your category: Science." << endl;
			catcher = questionScience(choice);
			if (toupper(choice) == 'A') {
				changeBoard = 4;
			}
			else if (toupper(choice) == 'B') {
				changeBoard = 10;
			}
			else if (toupper(choice) == 'C') {
				changeBoard = 16;
			}
			else if (toupper(choice) == 'D') {
				changeBoard = 22;
			}
			else if (toupper(choice) == 'E') {
				changeBoard = 28;
			}

			boardArray[changeBoard] = filler;
		}
		else if (tempArray[0] == 'C') {
			cout << "Your category: Christmas." << endl;
			catcher = questionChristmas(choice);

			if (toupper(choice) == 'A') {
				changeBoard = 5;
			}
			else if (toupper(choice) == 'B') {
				changeBoard = 11;
			}
			else if (toupper(choice) == 'C') {
				changeBoard = 17;
			}
			else if (toupper(choice) == 'D') {
				changeBoard = 23;
			}
			else if (toupper(choice) == 'E') {
				changeBoard = 29;
			}

			boardArray[changeBoard] = filler;
		}

		points = points + catcher;

	}

	cout << "YOUR FINAL RESULT IS: " << points << "!!" << endl;
	cout << "CONGRATULATIONS" << endl;

}
