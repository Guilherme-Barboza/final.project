#include "pch.h"
#include <iostream>
#include <string>

using namespace std;

void board() {

	cout << " Please choose a category and a letter within each category" << endl;

	cout << "|========================================================================|\n";
	cout << "|   MUSIC   | LITERATURE |  HISTORY  |   PEOPLE  |  SCIENCE  | CHRISTMAS |\n";
	cout << "|===========|============|===========|===========|===========|===========|\n";
	cout << "|  100  (a) |  100  (a)  |  100  (a) |  100  (a) |  100  (a) |  100  (a) |\n";
	cout << "|-----------|------------|-----------|-----------|-----------|-----------|\n";
	cout << "|  200  (b) |  200  (b)  |  200  (b) |  200  (b) |  200  (b) |  200  (b) |\n";
	cout << "|-----------|------------|-----------|-----------|-----------|-----------|\n";
	cout << "|  300  (c) |  300  (c)  |  300  (c) |  300  (c) |  300  (c) |  300  (c) |\n";
	cout << "|-----------|------------|-----------|-----------|-----------|-----------|\n";
	cout << "|  400  (d) |  400  (d)  |  400  (d) |  400  (d) |  400  (d) |  400  (d) |\n";
	cout << "|-----------|------------|-----------|-----------|-----------|-----------|\n";
	cout << "|  500  (e) |  500  (e)  |  500  (e) |  500  (e) |  500  (e) |  500  (e) |\n";
	cout << "|========================================================================|\n";
}

int questionMusic(char choice) {
	int a1 = 0;
	int b1 = 0;
	int c1 = 0;
	int d1 = 0;
	int e1 = 0;

	string answer;

	switch (choice) {
	case 'a':
		cout << "question" << endl;

		cin >> answer;
		
		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer") {
			a1 = 100;
			cout << "CORRECT - YOU WIN 100 POINTS" << endl;
		}
		else {
			a1 = -100;
			cout << "INCORRECT - YOU LOSE 100 POINTS" << endl;
		}

		break;
	case 'b':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer") {
			b1 = 200;
			cout << "CORRECT - YOU WIN 200 POINTS" << endl;
		}
		else {
			b1 = -200;
			cout << "INCORRECT - YOU LOSE 200 POINTS" << endl;
		}

		break;
	case 'c':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer") {
			c1 = 300;
			cout << "CORRECT - YOU WIN 300 POINTS" << endl;
		}
		else {
			c1 = -300;
			cout << "INCORRECT - YOU LOSE 300 POINTS" << endl;
		}

		break;
	case 'd':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer") {
			d1 = 400;
			cout << "CORRECT - YOU WIN 400 POINTS" << endl;
		}
		else {
			d1 = -400;
			cout << "INCORRECT - YOU LOSE 400 POINTS" << endl;
		}

		break;
	case 'e':
		cout << "question" << endl;

		cin >> answer;

		if (answer == "actual answer" || answer == "actual answer" || answer == "actual answer") {
			e1 = 500;
			cout << "CORRECT - YOU WIN 500 POINTS" << endl;
		}
		else {
			e1 = -500;
			cout << "INCORRECT - YOU LOSE 500 POINTS" << endl;
		}

		break;
	default:
		cout << "INVALID CHOICE" << endl;

	}

	return a1 + b1 + c1 + d1 + e1;
}

