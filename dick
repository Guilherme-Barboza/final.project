		if (answer == "what is ice hockey") {
			b8 = 200;
			cout << "CORRECT - YOU WIN 200 POINTS" << endl;
		}
		else {
			b8 = -200;
			cout << "INCORRECT - YOU LOSE 200 POINTS" << endl;
			cout << "The correct answer is: what is ice hockey" << endl;
		}

		break;
	case 300:
		cout << "Mike Pence called this 1986 hoops movie ‘the greatest sports film’ & screened it on Air Force 2 using his own copy" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "what is hoosiers") {
			c8 = 300;
			cout << "CORRECT - YOU WIN 300 POINTS" << endl;
		}
		else {
			c8 = -300;
			cout << "INCORRECT - YOU LOSE 300 POINTS" << endl;
			cout << "The correct answer is: what is hoosiers" << endl;
		}

		break;
	case 400:
		cout << "It wasn't perfect, but the Dodgers used 4 pitchers to get this hyphenated type of win in a 2018 game vs. the Padres" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "what is a no hitter") {
			d8 = 400;
			cout << "CORRECT - YOU WIN 400 POINTS" << endl;
		}
		else {
			d8 = -400;
			cout << "INCORRECT - YOU LOSE 400 POINTS" << endl;
			cout << "The correct answer is: what is a no hitter" << endl;
		}

		break;
	case 500:
		cout << "Lexi Thompson lost a 2017 LPGA tourney after improperly placing a ball & then turning in one of these" << endl;

		cin.ignore();
		getline(cin, answer);

		if (answer == "what is an incorrect scorecard") {
			e8 = 500;
			cout << "CORRECT - YOU WIN 500 POINTS" << endl;
		}
		else {
			e8 = -500;
			cout << "INCORRECT - YOU LOSE 500 POINTS" << endl;
			cout << "The correct answer is: what is an incorrect scorecard" << endl;
		}

		break;
	default:
		cout << "INVALID CHOICE" << endl;

	}

	return a8 + b8 + c8 + d8 + e8;
}

